generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "file:./dev.db"
}

model Travel {
    id            Int            @id @default(autoincrement())
    country       String
    title         String
    description   String?
    start         DateTime
    end           DateTime
    userId        String
    budget        Int?
    imageUrl      String?
    activities    Activity[]
    accomodations Accomodation[]
    transfers     Transfer[]
}

model Accomodation {
    id         Int      @id @default(autoincrement())
    name       String
    travel     Travel   @relation(fields: [travelId], references: [id])
    travelId   Int
    start      DateTime
    end        DateTime
    city       String?
    address    String?
    postalCode String?
    bookingNr  String?
}

model Transfer {
    id        Int      @id @default(autoincrement())
    travel    Travel   @relation(fields: [travelId], references: [id])
    travelId  Int
    title     String
    start     DateTime
    end       DateTime
    type      String
    bookingNr String?
}

model Activity {
    id           Int      @id @default(autoincrement())
    travel       Travel   @relation(fields: [travelId], references: [id])
    travelId     Int
    start        DateTime
    end          DateTime
    cost         Int
    title        String
    link         String?
    imageUrl     String?
    activityType String?
    city         String?
    address      String?
    postalCode   String?
}
